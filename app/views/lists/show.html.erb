<h1><%= @list.name %></h1>

<%= link_to 'Edit', edit_list_path(@list) %>
<%= link_to 'Back', lists_path %>
<%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' } %>

<h2>Bookmarks</h2>
<%= link_to 'New Bookmark', new_list_bookmark_path(@list) %>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %> (<%= link_to 'Remove', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>)
    </li>
  <% end %>
</ul>
